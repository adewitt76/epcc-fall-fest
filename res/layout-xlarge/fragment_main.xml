<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game_fragment"
    android:orientation = "vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black" >

        <ImageView
            android:id="@+id/main_screen_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".9"
            android:scaleType="fitXY"
            android:src="@drawable/graident_background" />

       	<Button
       	    android:id="@+id/photoButton"
       	    android:layout_width="match_parent"
       	    android:layout_height="70dp"
       	    android:layout_alignParentBottom="true"
       	    android:layout_alignParentLeft="true"
       	    android:layout_weight=".1"
       	    android:text="@string/photo_button" />

       	<ImageView
       	    android:id="@+id/moon_png"
       	    android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
       	    android:layout_alignParentLeft="true"
       	    android:layout_centerVertical="true"
       	    android:contentDescription="moon on main fragment"
       	    android:scaleType="center"
       	    android:src="@drawable/moon" />

       	<ImageView
       	    android:id="@+id/hill_2_png"
       	    android:layout_width="wrap_content"
       	    android:layout_height="300dp"
       	    android:layout_above="@+id/photoButton"
       	    android:layout_alignParentLeft="true"
       	    android:contentDescription="back row of hills"
       	    android:scaleType="fitXY"
       	    android:src="@drawable/hill_2" />

       	<ImageView
       	    android:id="@+id/hill_1_png"
       	    android:layout_width="match_parent"
       	    android:layout_height="200dp"
       	    android:layout_above="@+id/photoButton"
       	    android:layout_alignParentLeft="true"
       	    android:contentDescription="front row of hills"
       	    android:scaleType="fitXY"
       	    android:src="@drawable/hill_1" />
       	
       	<ImageView
       	    android:id="@+id/logo_png"
       	    android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
       	    android:contentDescription="logo on main fragment"
       	    android:scaleType="fitStart"
       	    android:src="@drawable/monster_logo" />

       	 <ImageView
       	    android:id="@+id/image_alien"
       	    android:layout_width="130dp"
       	    android:layout_height="130dp"
       	    android:layout_alignBottom="@+id/hill_2_png"
       	    android:layout_marginBottom="115dp"
       	    android:layout_alignParentLeft="true"
       	    android:layout_marginLeft="70dp"
       	    android:scaleType="centerCrop"
       	    android:src="@drawable/alien" 
       	    android:visibility="invisible" />
       	
      	<ImageView
       	    android:id="@+id/image_clops"
       	    android:layout_width="140dp"
       	    android:layout_height="140dp"
       	    android:layout_alignBottom="@+id/hill_2_png"
       	    android:layout_marginBottom="75dp"
       	    android:layout_alignParentLeft="true"
       	    android:layout_marginLeft="220dp"
       	    android:scaleType="centerCrop"
       	    android:src="@drawable/clops" 
       	    android:visibility="invisible" />
   		
   		<ImageView
       	    android:id="@+id/image_werewolf"
       	    android:layout_width="150dp"
       	    android:layout_height="150dp"
       	    android:layout_alignBottom="@+id/hill_2_png"
       	    android:layout_marginBottom="90dp"
       	    android:layout_alignParentRight="true"
       	    android:layout_marginRight="120dp"
       	    android:scaleType="centerCrop"
       	    android:src="@drawable/werewolf" 
       	    android:visibility="invisible" />
   		
   		<ImageView
       	    android:id="@+id/image_witch"
       	    android:layout_width="150dp"
       	    android:layout_height="150dp"
       	    android:layout_alignBottom="@+id/hill_2_png"
       	    android:layout_marginBottom="40dp"
       	    android:layout_alignParentRight="true"
       	    android:layout_marginRight="200dp"
       	    android:scaleType="centerCrop"
       	    android:src="@drawable/witch" 
       	    android:visibility="invisible" />
   		
      	<ImageView
       	    android:id="@+id/image_mummy"
       	    android:layout_width="175dp"
       	    android:layout_height="175dp"
       	    android:layout_alignBottom="@+id/hill_2_png"
       	    android:layout_marginBottom="30dp"
       	    android:layout_alignParentLeft="true"
       	    android:layout_marginLeft="310dp"
       	    android:scaleType="centerCrop"
       	    android:src="@drawable/mummy" 
       	    android:visibility="invisible" />
       	
       	<ImageView
       	    android:id="@+id/image_yeti"
       	    android:layout_width="180dp"
       	    android:layout_height="180dp"
       	    android:layout_alignBottom="@+id/hill_2_png"
       	    android:layout_marginBottom="50dp"
       	    android:layout_alignParentRight="true"
       	    android:scaleType="centerCrop"
       	    android:src="@drawable/yeti" 
       	    android:visibility="invisible" />
       	
      	<ImageView
       	    android:id="@+id/image_vampire"
       	    android:layout_width="160dp"
       	    android:layout_height="160dp"
       	    android:layout_alignBottom="@+id/hill_2_png"
       	    android:layout_marginBottom="20dp"
       	    android:layout_alignParentLeft="true"
       	    android:layout_marginLeft="110dp"
       	    android:scaleType="centerCrop"
       	    android:src="@drawable/vampire" 
       	    android:visibility="invisible" />   	       	
       	
       	<ImageView
       	    android:id="@+id/image_frankie"
       	    android:layout_width="180dp" 
       	    android:layout_height="180dp"
       	    android:layout_alignBottom="@+id/hill_2_png"
       	    android:layout_alignParentLeft="true"
       	    android:scaleType="centerCrop"
       	    android:src="@drawable/frankie" 
       	    android:visibility="invisible" />

       	<ImageView
       	    android:id="@+id/image_blob"
       	    android:layout_width="160dp"
       	    android:layout_height="160dp"
       	    android:layout_alignBottom="@+id/hill_2_png"
       	    android:layout_alignParentLeft="true"
       	    android:layout_marginLeft="255dp"
       	    android:scaleType="centerCrop"
       	    android:src="@drawable/blob" 
       	    android:visibility="invisible" />
       	
    	<ImageView
       	    android:id="@+id/image_tomato"
       	    android:layout_width="170dp"
       	    android:layout_height="170dp"
       	    android:layout_alignBottom="@+id/hill_2_png"
       	    android:layout_marginBottom="1dp"
       	    android:layout_alignParentRight="true"
       	    android:layout_marginRight="100dp"
       	    android:scaleType="centerCrop"
       	    android:src="@drawable/tomato" 
       	    android:visibility="invisible" />
       	
       	<ImageView
       	    android:id="@+id/image_chutlu"
       	    android:layout_width="170dp"
       	    android:layout_height="170dp"
       	    android:layout_alignParentRight="true"
       	    android:layout_centerVertical="true"
       	    android:layout_marginRight="30dp"
       	    android:src="@drawable/chutulu" 
       	    android:visibility="invisible" />
       	
       	<TextView
       	    android:id="@+id/score_text"
       	    android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
       	    android:layout_alignBottom="@+id/moon_png"
       	    android:layout_toRightOf="@+id/moon_png"
       	    android:text="@string/score"
       	    android:padding="4dp"
       	    android:textSize="35sp"
       	    android:textColor="@color/red" />
       	
       	<TextView
       	    android:id="@+id/current_score"
       	    android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
       	    android:layout_alignBottom="@+id/moon_png"
       	    android:layout_toRightOf="@+id/score_text"
       	    android:text="@string/score_init"
       	    android:padding="4dp"
       	    android:textSize="35sp"
       	    android:textColor="@color/red" />

</RelativeLayout>

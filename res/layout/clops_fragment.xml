<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragmentExampleContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:clickable="true"
    >

    <ImageView
        android:id="@+id/fragment_clops_clopsImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"        android:src="@drawable/clops" />

    <TextView
        android:id="@+id/fragment_clops_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:padding="2dp"
        android:text="You found the Cyclops"
        android:textColor="@color/red"
        android:textSize="22sp"
        android:textStyle="normal" />
    
</RelativeLayout>

<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainContainer"
    android:orientation = "vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black" >

        <ImageView
            android:id="@+id/main_screen_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/graident_background"
            android:contentDescription="@string/generic_description" />

       	<Button
       	    android:id="@+id/photoButton"
       	    android:layout_width="match_parent"
       	    android:layout_height="wrap_content"
       	    android:layout_alignParentBottom="true"
       	    android:layout_alignParentLeft="true"
       	    android:text="@string/photo_button" />
		
       	
 		<ImageView
       	    android:id="@+id/moon_png"
       	    android:layout_width="125dp"
       	    android:layout_height="125dp"
       	    android:scaleType="fitCenter"
       	    android:layout_above="@+id/hill_2_png"
       	    android:layout_alignParentLeft="true"
       	    android:contentDescription="@string/generic_description"
       	    android:src="@drawable/moon" />

       	<ImageView
       	    android:id="@+id/hill_2_png"
       	    android:layout_width="wrap_content"
       	    android:layout_height="150dp"
       	    android:layout_above="@+id/photoButton"
       	    android:layout_alignParentLeft="true"
       	    android:contentDescription="back row of hills"
       	    android:scaleType="fitXY"
       	    android:src="@drawable/hill_2" />

       	<ImageView
       	    android:id="@+id/hill_1_png"
       	    android:layout_width="match_parent"
       	    android:layout_height="75dp"
       	    android:layout_above="@+id/photoButton"
       	    android:layout_alignParentLeft="true"
       	    android:contentDescription="front row of hills"
       	    android:scaleType="fitXY"
       	    android:src="@drawable/hill_1" />
       	
       	<ImageView
       	    android:id="@+id/logo_png"
       	    android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
       	    android:contentDescription="logo on main fragment"
       	    android:scaleType="fitStart"
       	    android:src="@drawable/monster_logo" />
		
       	<ImageView
       	    android:id="@+id/image_alien"
       	    android:layout_width="60dp"
       	    android:layout_height="60dp"
       	    android:layout_alignBottom="@+id/hill_2_png"
       	    android:layout_marginBottom="50dp"
       	    android:layout_alignParentLeft="true"
       	    android:layout_marginLeft="30dp"
       	    android:scaleType="centerCrop"
       	    android:src="@drawable/alien"
       	    android:visibility="invisible"
       	    android:contentDescription="@string/generic_description" />"
       	
       	<ImageView
       	    android:id="@+id/image_clops"
       	    android:layout_width="65dp"
       	    android:layout_height="65dp"
       	    android:layout_alignBottom="@+id/hill_2_png"
       	    android:layout_marginBottom="35dp"
       	    android:layout_alignParentLeft="true"
       	    android:layout_marginLeft="105dp"
       	    android:scaleType="centerCrop"
       	    android:src="@drawable/clops" 
       	    android:visibility="invisible"
       	    android:contentDescription="@string/generic_description" />
       	
       	<ImageView
       	    android:id="@+id/image_vampire"
       	    android:layout_width="72dp"
       	    android:layout_height="72dp"
       	    android:layout_alignBottom="@+id/hill_2_png"
       	    android:layout_marginBottom="17dp"
       	    android:layout_alignParentLeft="true"
       	    android:layout_marginLeft="55dp"
       	    android:scaleType="centerCrop"
       	    android:src="@drawable/vampire" 
       	    android:visibility="invisible"
       	    android:contentDescription="@string/generic_description" />

       	<ImageView
       	    android:id="@+id/image_werewolf"
       	    android:layout_width="75dp"
       	    android:layout_height="75dp"
       	    android:layout_alignBottom="@+id/hill_2_png"
       	    android:layout_marginBottom="50dp"
       	    android:layout_alignParentRight="true"
       	    android:layout_marginRight="50dp"
       	    android:scaleType="centerCrop"
       	    android:src="@drawable/werewolf" 
       	    android:visibility="invisible"
       	    android:contentDescription="@string/generic_description" />
   	
       	<ImageView
       	    android:id="@+id/image_witch"
       	    android:layout_width="70dp"
       	    android:layout_height="70dp"
       	    android:layout_alignBottom="@+id/hill_2_png"
       	    android:layout_marginBottom="18dp"
       	    android:layout_alignParentRight="true"
       	    android:layout_marginRight="90dp"
       	    android:scaleType="centerCrop"
       	    android:src="@drawable/witch" 
       	    android:visibility="invisible"
       	    android:contentDescription="@string/generic_description" />
       	
       	<ImageView
       	    android:id="@+id/image_mummy"
       	    android:layout_width="80dp"
       	    android:layout_height="80dp"
       	    android:layout_alignBottom="@+id/hill_2_png"
       	    android:layout_marginBottom="12dp"
       	    android:layout_alignParentRight="true"
       	    android:layout_marginRight="140dp"
       	    android:scaleType="centerCrop"
       	    android:src="@drawable/mummy" 
       	    android:visibility="invisible"
       	    android:contentDescription="@string/generic_description" />
       	       	
       	<ImageView
       	    android:id="@+id/image_yeti"
       	    android:layout_width="80dp"
       	    android:layout_height="80dp"
       	    android:layout_alignBottom="@+id/hill_2_png"
       	    android:layout_marginBottom="18dp"
       	    android:layout_alignParentRight="true"
       	    android:scaleType="centerCrop"
       	    android:src="@drawable/yeti" 
       	    android:visibility="invisible"
       	    android:contentDescription="@string/generic_description" />
       	       	
       	<ImageView
       	    android:id="@+id/image_frankie"
       	    android:layout_width="80dp" 
       	    android:layout_height="80dp"
       	    android:layout_alignBottom="@+id/hill_2_png"
       	    android:layout_alignParentLeft="true"
       	    android:scaleType="centerCrop"
       	    android:src="@drawable/frankie" 
       	    android:visibility="invisible"
       	    android:contentDescription="@string/generic_description" />
       	      	
      	<ImageView
       	    android:id="@+id/image_blob"
       	    android:layout_width="70dp"
       	    android:layout_height="70dp"
       	    android:layout_alignBottom="@+id/hill_2_png"
       	    android:layout_alignParentLeft="true"
       	    android:layout_marginLeft="120dp"
       	    android:scaleType="centerCrop"
       	    android:src="@drawable/blob" 
       	    android:visibility="invisible"
       	    android:contentDescription="@string/generic_description" />
      	
      	<ImageView
       	    android:id="@+id/image_tomato"
       	    android:layout_width="80dp"
       	    android:layout_height="80dp"
       	    android:layout_alignBottom="@+id/hill_2_png"
       	    android:layout_alignParentRight="true"
       	    android:layout_marginRight="45dp"
       	    android:scaleType="centerCrop"
       	    android:src="@drawable/tomato" 
       	    android:visibility="invisible"
       	    android:contentDescription="@string/generic_description" />
     	
       	<ImageView
       	    android:id="@+id/image_chutlu"
       	    android:layout_width="80dp"
       	    android:layout_height="80dp"
       	    android:layout_alignParentRight="true"
       	    android:layout_centerVertical="true"
       	    android:layout_marginRight="20dp"
       	    android:scaleType="centerCrop"
       	    android:src="@drawable/chutulu" 
       	    android:visibility="invisible"
       	    android:contentDescription="@string/generic_description" />

       	<TextView
       	    android:id="@+id/score_text"
       	    android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
       	    android:layout_alignBottom="@+id/moon_png"
       	    android:layout_toRightOf="@+id/moon_png"
       	    android:text="@string/score"
       	    android:padding="2dp"
       	    android:textSize="20sp"
       	    android:textColor="@color/red" />
       	
       	<TextView
       	    android:id="@+id/current_score"
       	    android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
       	    android:layout_alignBottom="@+id/moon_png"
       	    android:layout_toRightOf="@+id/score_text"
       	    android:text="@string/score_init"
       	    android:padding="2dp"
       	    android:textSize="20sp"
       	    android:textColor="@color/red" />


	<RelativeLayout
		android:layout_width="300dp"
		android:layout_height="200dp"
		android:layout_centerVertical="true"
		android:layout_centerHorizontal="true"
		android:id="@+id/ticketBoxLayout"
		android:visibility="invisible"
		>

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/TicketBoxView"
			android:src="@drawable/ticket_box"
			android:layout_centerVertical="true"
			android:layout_centerHorizontal="true" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="@string/ticket_number"
			android:id="@+id/ticketTextView"
			android:textColor="@color/red"
			android:textSize="@dimen/ticket_size"
			android:typeface="serif"
			android:layout_marginTop="20dp"
			android:layout_alignParentTop="true"
			android:layout_centerHorizontal="true" />

		<EditText
			android:layout_width="250dp"
			android:layout_height="wrap_content"
			android:id="@+id/ticketBoxEditText"
			android:textSize="@dimen/ticket_size"
			android:textColor="@color/black"
			android:textAlignment="center"
			android:background="#99ffffff"
			android:theme="@style/Theme.Holoween"
			android:layout_below="@id/ticketTextView"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="15dp"
			android:enabled="false" />

		<Button
			style="@style/Theme.Holoween"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/ticket_button"
			android:id="@+id/ticketBoxButton"
			android:layout_below="@+id/ticketBoxEditText"
			android:layout_alignRight="@+id/ticketBoxEditText"
			android:layout_alignEnd="@+id/ticketBoxEditText"
			android:layout_marginTop="15dp"
			android:background="@android:color/darker_gray"
			android:enabled="false" />

	</RelativeLayout>

	<RelativeLayout
		android:layout_width="300dp"
		android:layout_height="200dp"
		android:layout_centerVertical="true"
		android:layout_centerHorizontal="true"
		android:id="@+id/badConnectionBox"
		android:visibility="invisible"
		>

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/badConnectionBoxView"
			android:src="@drawable/ticket_box"
			android:layout_centerVertical="true"
			android:layout_centerHorizontal="true" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="@string/bad_connection"
			android:id="@+id/badConnectionTextView"
			android:textColor="@color/red"
			android:textSize="18dp"
			android:typeface="serif"
			android:layout_marginTop="20dp"
			android:layout_alignParentTop="true"
			android:layout_centerHorizontal="true" />

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="@string/bad_connection_description"
			android:id="@+id/badConnectionDescTextView"
			android:typeface="serif"
			android:layout_below="@id/badConnectionTextView"
			android:layout_marginTop="10dp"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp"
			/>

		<Button
			style="@style/Theme.Holoween"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/bad_connection_button"
			android:id="@+id/badConnectionButton"
			android:layout_below="@+id/badConnectionDescTextView"
			android:layout_alignRight="@+id/badConnectionDescTextView"
			android:layout_alignEnd="@+id/badConnectionDescTextView"
			android:layout_marginTop="15dp"
			android:background="@android:color/darker_gray"
			android:enabled="false" />

	</RelativeLayout>

</RelativeLayout>

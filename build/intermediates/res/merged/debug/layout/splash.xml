<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/splash_screen_rel_layout"
    android:orientation = "vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:clickable="true" >"

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/graident_background"
        android:contentDescription= "@string/generic_description" />
      
    <ImageView
       	    android:id="@+id/epcc_logo"
       	    android:layout_width="match_parent"
       	    android:layout_height="wrap_content"
       	    android:scaleType="fitCenter"
       	    android:layout_centerInParent="true"
       	   	android:layout_marginLeft="30dp"
       	   	android:layout_marginRight="30dp"
       	    android:contentDescription="@string/generic_description"
       	    android:src="@drawable/epcc_logo" 
       	    android:visibility="gone" /> 
       	    
    <ImageView
       	    android:id="@+id/csit_logo"
       	    android:layout_width="match_parent"
       	    android:layout_height="wrap_content"
       	    android:scaleType="fitCenter"
       	    android:layout_centerInParent="true"
       	   	android:layout_marginLeft="30dp"
       	   	android:layout_marginRight="30dp"
       	    android:contentDescription="@string/generic_description"
       	    android:src="@drawable/csit_logo" 
       	    android:visibility="gone" />
    
    <ImageView
       	    android:id="@+id/monster_logo"
       	    android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
       	    android:scaleType="fitCenter"
       	    android:layout_centerInParent="true"
       	    android:contentDescription="@string/generic_description"
       	    android:src="@drawable/monster_logo" 
       	    android:visibility="gone" />  
       	    
    <ImageView
       	    android:id="@+id/starting_scene_one"
       	    android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
       	    android:layout_margin="20dp"
       	    android:scaleType="fitCenter"
       	    android:layout_centerInParent="true"
       	    android:contentDescription="@string/generic_description"
       	    android:src="@drawable/comic_starting_scene_one" 
       	    android:visibility="gone" /> 
       	    
    <ImageView
       	    android:id="@+id/starting_scene_two"
       	    android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
       	    android:layout_margin="20dp"
       	    android:scaleType="fitCenter"
       	    android:layout_centerInParent="true"
       	    android:contentDescription="@string/generic_description"
       	    android:src="@drawable/comic_starting_scene_two" 
       	    android:visibility="gone" /> 
       	    
    <ImageView
       	    android:id="@+id/starting_scene_three"
       	    android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
       	    android:layout_margin="20dp"
       	    android:scaleType="fitCenter"
       	    android:layout_centerInParent="true"
       	    android:contentDescription="@string/generic_description"
       	    android:src="@drawable/comic_starting_scene_three" 
       	    android:visibility="gone" /> 
       	    
    <ImageView
       	    android:id="@+id/starting_scene_four"
       	    android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
       	    android:layout_margin="20dp"
       	    android:scaleType="fitCenter"
       	    android:layout_centerInParent="true"
       	    android:contentDescription="@string/generic_description"
       	    android:src="@drawable/comic_starting_scene_four" 
       	    android:visibility="gone" /> 
       	    
</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/found_monster_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:clickable="true"
    >

 	<ImageView
    	android:id="@+id/main_screen_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/graident_background"
        android:contentDescription="@string/generic_description" />
 	
    <ImageView
        android:id="@+id/fragment_vampire_vampireImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"        android:src="@drawable/vampire"
		android:contentDescription= "@string/generic_description" />

    <TextView
        android:id="@+id/fragment_vampire_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:padding="2dp"
        android:text="@string/found_vampire"
        android:textColor="@color/red"
        android:textSize="22sp"
        android:textStyle="normal" />
    
</RelativeLayout>

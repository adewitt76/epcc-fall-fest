<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainContainer"
    android:orientation = "vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/graident_background"
        android:contentDescription= "@string/generic_description" />
      
    <ImageView
       	    android:id="@+id/epcc_logo"
       	    android:layout_width="match_parent"
       	    android:layout_height="wrap_content"
       	    android:scaleType="fitCenter"
       	    android:layout_centerInParent="true"
       	   	android:layout_marginLeft="30dp"
       	   	android:layout_marginRight="30dp"
       	    android:contentDescription="@string/generic_description"
       	    android:src="@drawable/epcc_logo" 
       	    android:visibility="gone" /> 
       	    
    <ImageView
       	    android:id="@+id/csit_logo"
       	    android:layout_width="match_parent"
       	    android:layout_height="wrap_content"
       	    android:scaleType="fitCenter"
       	    android:layout_centerInParent="true"
       	   	android:layout_marginLeft="30dp"
       	   	android:layout_marginRight="30dp"
       	    android:contentDescription="@string/generic_description"
       	    android:src="@drawable/csit_logo" 
       	    android:visibility="gone" />
    
    <ImageView
       	    android:id="@+id/monster_logo"
       	    android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
       	    android:scaleType="fitCenter"
       	    android:layout_centerInParent="true"
       	    android:contentDescription="@string/generic_description"
       	    android:src="@drawable/monster_logo" 
       	    android:visibility="gone" />  
</RelativeLayout>

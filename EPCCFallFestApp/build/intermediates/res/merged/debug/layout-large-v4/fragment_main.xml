<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainContainer"
    android:orientation = "vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black" >

        <ImageView
            android:id="@+id/main_screen_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".9"
            android:scaleType="fitXY"
            android:src="@drawable/graident_background" />

       	<Button
       	    android:id="@+id/photoButton"
       	    android:layout_width="match_parent"
       	    android:layout_height="50dp"
       	    android:layout_alignParentBottom="true"
       	    android:layout_alignParentLeft="true"
       	    android:layout_weight=".1"
       	    android:text="@string/photo_button" />

       	<ImageView
       	    android:id="@+id/moon_png"
       	    android:layout_width="200dp"
       	    android:layout_height="200dp"
       	    android:scaleType="fitCenter"
       	    android:layout_alignParentLeft="true"
       	    android:layout_centerVertical="true"
       	    android:contentDescription="moon on main fragment"
       	    android:src="@drawable/moon" />

       	<ImageView
       	    android:id="@+id/hill_2_png"
       	    android:layout_width="wrap_content"
       	    android:layout_height="250dp"
       	    android:layout_above="@+id/photoButton"
       	    android:layout_alignParentLeft="true"
       	    android:contentDescription="back row of hills"
       	    android:scaleType="fitXY"
       	    android:src="@drawable/hill_2" />

       	<ImageView
       	    android:id="@+id/hill_1_png"
       	    android:layout_width="match_parent"
       	    android:layout_height="150dp"
       	    android:layout_above="@+id/photoButton"
       	    android:layout_alignParentLeft="true"
       	    android:contentDescription="front row of hills"
       	    android:scaleType="fitXY"
       	    android:src="@drawable/hill_1" />
       	
       	<ImageView
       	    android:id="@+id/logo_png"
       	    android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
       	    android:contentDescription="logo on main fragment"
       	    android:scaleType="fitStart"
       	    android:src="@drawable/monster_logo" />

       	<ImageView
       	    android:id="@+id/image_alien"
       	    android:layout_width="90dp"
       	    android:layout_height="90dp"
       	    android:layout_alignBottom="@+id/hill_2_png"
       	    android:layout_marginBottom="95dp"
       	    android:layout_alignParentLeft="true"
       	    android:layout_marginLeft="40dp"
       	    android:scaleType="centerCrop"
       	    android:src="@drawable/alien" 
       	    android:visibility="invisible" />
       	
      	<ImageView
       	    android:id="@+id/image_clops"
       	    android:layout_width="110dp"
       	    android:layout_height="110dp"
       	    android:layout_alignBottom="@+id/hill_2_png"
       	    android:layout_marginBottom="65dp"
       	    android:layout_alignParentLeft="true"
       	    android:layout_marginLeft="150dp"
       	    android:scaleType="centerCrop"
       	    android:src="@drawable/clops" 
       	    android:visibility="invisible" />
   
      	<ImageView
       	    android:id="@+id/image_mummy"
       	    android:layout_width="120dp"
       	    android:layout_height="120dp"
       	    android:layout_alignBottom="@+id/hill_2_png"
       	    android:layout_marginBottom="25dp"
       	    android:layout_alignParentLeft="true"
       	    android:layout_marginLeft="255dp"
       	    android:scaleType="centerCrop"
       	    android:src="@drawable/mummy" 
       	    android:visibility="invisible" />
      	
      	<ImageView
       	    android:id="@+id/image_werewolf"
       	    android:layout_width="120dp"
       	    android:layout_height="120dp"
       	    android:layout_alignBottom="@+id/hill_2_png"
       	    android:layout_marginBottom="90dp"
       	    android:layout_alignParentRight="true"
       	    android:layout_marginRight="70dp"
       	    android:scaleType="centerCrop"
       	    android:src="@drawable/werewolf" 
       	    android:visibility="invisible" />
       	
       	<ImageView
       	    android:id="@+id/image_witch"
       	    android:layout_width="120dp"
       	    android:layout_height="120dp"
       	    android:layout_alignBottom="@+id/hill_2_png"
       	    android:layout_marginBottom="40dp"
       	    android:layout_alignParentRight="true"
       	    android:layout_marginRight="135dp"
       	    android:scaleType="centerCrop"
       	    android:src="@drawable/witch" 
       	    android:visibility="invisible" />
       	
       	<ImageView
       	    android:id="@+id/image_yeti"
       	    android:layout_width="130dp"
       	    android:layout_height="130dp"
       	    android:layout_alignBottom="@+id/hill_2_png"
       	    android:layout_marginBottom="40dp"
       	    android:layout_alignParentRight="true"
       	    android:scaleType="centerCrop"
       	    android:src="@drawable/yeti" 
       	    android:visibility="invisible" />
       	
      	<ImageView
       	    android:id="@+id/image_vampire"
       	    android:layout_width="120dp"
       	    android:layout_height="120dp"
       	    android:layout_alignBottom="@+id/hill_2_png"
       	    android:layout_marginBottom="20dp"
       	    android:layout_alignParentLeft="true"
       	    android:layout_marginLeft="80dp"
       	    android:scaleType="centerCrop"
       	    android:src="@drawable/vampire" 
       	    android:visibility="invisible" />   	       	
       	
       	<ImageView
       	    android:id="@+id/image_frankie"
       	    android:layout_width="130dp" 
       	    android:layout_height="130dp"
       	    android:layout_alignBottom="@+id/hill_2_png"
       	    android:layout_alignParentLeft="true"
       	    android:scaleType="centerCrop"
       	    android:src="@drawable/frankie" 
       	    android:visibility="invisible" />

       	<ImageView
       	    android:id="@+id/image_blob"
       	    android:layout_width="120dp"
       	    android:layout_height="120dp"
       	    android:layout_alignBottom="@+id/hill_2_png"
       	    android:layout_alignParentLeft="true"
       	    android:layout_marginLeft="170dp"
       	    android:scaleType="centerCrop"
       	    android:src="@drawable/blob" 
       	    android:visibility="invisible" />
       	
    	<ImageView
       	    android:id="@+id/image_tomato"
       	    android:layout_width="130dp"
       	    android:layout_height="130dp"
       	    android:layout_alignBottom="@+id/hill_2_png"
       	    android:layout_marginBottom="1dp"
       	    android:layout_alignParentRight="true"
       	    android:layout_marginRight="70dp"
       	    android:scaleType="centerCrop"
       	    android:src="@drawable/tomato" 
       	    android:visibility="invisible" />
       	
       	<ImageView
       	    android:id="@+id/image_chutlu"
       	    android:layout_width="130dp"
       	    android:layout_height="130dp"
       	    android:layout_alignParentRight="true"
       	    android:layout_centerVertical="true"
       	    android:layout_marginRight="30dp"
       	    android:scaleType="centerCrop"
       	    android:src="@drawable/chutulu" 
       	    android:visibility="invisible" />
       	
       	<TextView
       	    android:id="@id/score_text"
       	    android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
       	    android:layout_alignBottom="@+id/moon_png"
       	    android:layout_toRightOf="@+id/moon_png"
       	    android:text="@string/score"
       	    android:padding="2dp"
       	    android:textSize="25sp"
       	    android:textColor="@color/red" />
       	
       	<TextView
       	    android:id="@+id/current_score"
       	    android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
       	    android:layout_alignBottom="@+id/moon_png"
       	    android:layout_toRightOf="@+id/score_text"
       	    android:text="@string/score_init"
       	    android:padding="2dp"
       	    android:textSize="25sp"
       	    android:textColor="@color/red" />

</RelativeLayout>
